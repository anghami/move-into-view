{
    "extends": "standard",
    "installedESLint": true,
    "plugins": [
        "standard",
        "promise"
    ],
    "rules" : {
      "semi" : [ "error", "always" ],
      "standard/object-curly-even-spacing": [2, "either"]
    },
    "globals" : {
      "describe" : true,
      "it" : true,
      "window" : true,
      "document" : true,
      "expect" : true
    }
}